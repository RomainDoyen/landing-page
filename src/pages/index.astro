---
import Layout from '../layouts/Layout.astro';
import Image from '../ui/components/design-system/image/image.astro';
import Icon from '../ui/components/design-system/icon-social/icon-social.astro';
import Circle from '../ui/components/design-system/cicrcle/circle.astro';
import Container from '../ui/components/container/container.astro';
import Header from '../ui/components/header/header.astro';
---

<Layout title="Landing page">
	
	<Circle colorBackground="#017143" />

	<Header />

	<Container customClass="social-ul">
		<Icon 
			name="facebook"  
			link="https://www.facebook.com"
		/>

		<Icon 
			name="instagram"  
			link="https://www.instagram.com"
		/>

		<Icon 
			name="twitter" 
			link="https://www.twitter.com"
		/>
	</Container>

	<Container customClass="thumb-ul">
		<Image 
			altText="Logo App"
			width="60px"
			src="/images/thumb1.png" 
		/>
		<Image 
			altText="Logo App"
			width="60px"
			src="/images/thumb2.png" 
		/>
		<Image 
			altText="Logo App"
			width="60px"
			src="/images/thumb3.png" 
		/>
	</Container>
</Layout>

